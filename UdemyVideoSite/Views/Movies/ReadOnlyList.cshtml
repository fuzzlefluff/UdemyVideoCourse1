@model UdemyVideoSite.ViewModels.MovieCustomerListViewModel
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies Page</h2>

<table id="movies" class="table table-bordered table-hover bg-secondary">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date Added</th>
            <th>Stock</th>
            <th>Genre</th>
            <th>Release Date</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {

            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        "width": "20%",
                        data: "dateAdded"
                    },
                    {
                        "width": "10%",
                        data: "stock"
                    },
                    {
                        "width": "20%",
                        data: "genre.name"
                    },
                    {
                        "width": "20%",
                        data: "releaseDate"
                    },
                ]
            });
        });
    </script>
}